{
    "extends": "eslint:recommended",
    "env": {
      "browser": true,
      "commonjs": true,
      "node": true,
      "es6": true
    },
    "parserOptions": {
      "ecmaVersion": 2018,
      "ecmaFeatures": {
        "legacyDecorators": true
      }
    },
    "rules": {
      "no-console": "off",
      "strict": ["error", "global"],
      "curly": "warn"
    }
  }